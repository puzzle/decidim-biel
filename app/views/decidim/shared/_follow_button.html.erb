<% if (followable.is_a? Decidim::Assembly) && followable.members.not_ceased.any? %>

  <div class="assembly-members-list author-data--big">
    <h5><%= t('decidim.assemblies.assembly_members.index.members') %></h5>
    <% for member in followable.members.not_ceased.first(6) %>
      <% model = Decidim::AssemblyMemberPresenter.new(member) %>
      <% if model.profile_url.present? %>
        <%= link_to (decidim.profile_url host: followable.organization.host, nickname: model.user.nickname), class: "author__avatar author__avatar-horizontal", title: model.user.nickname do %>
          <%= image_tag Decidim::AssemblyMemberPresenter.new(model).avatar_url(:big), alt: "member-avatar" %>
        <% end %>
      <% else %>
        <span class="author__avatar" title="<%= model.full_name %>">
          <%= image_tag model.non_user_avatar_path, alt: "member-avatar" %>
        </span>
      <% end %>
    <% end %>
  </div>

    </div>
  </div>
  <div class="card extra">
    <div class="card__content">

<% end %>

<%= cell "decidim/follow_button", followable, inline: false, large: large %>

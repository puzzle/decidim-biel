<section class="wrapper-home upcoming-events home-section">
  <div class="row">
    <h3 class="section-heading"><%= t("decidim.content_blocks.last_blog_posts.title") %></h3>
    <div class="row">
      <div class="column medium-6">
        <div class="first-blog-post card">
          <%= image_pack_tag blog_image_src(first_post) %>
          <div class="first-blog-post-description">
            <%= link_to resource_locator(first_post).path do %>
              <span class="card__title"><%= translated_attribute first_post.title %></span>
            <% end %>
            <div class="card__author" style="margin: 0.5rem 0 0">
              <%= assembly_or_space(first_post.component&.participatory_space) %>
            </div>
          </div>
        </div>
      </div>
      <div class="column medium-6 older-blog-posts">
        <% older_posts.each do |post| %>
          <div class="older-blog-post card">
            <%= image_pack_tag blog_image_src(post) %>
            <div class="older-blog-post-description">
              <%= link_to resource_locator(post).path do %>
                <span class="card__title"><%= translated_attribute post.title %></span>
              <% end %>
              <div class="card__author" style="margin: 0.5rem 0 0">
                <%= assembly_or_space(post.component&.participatory_space) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
